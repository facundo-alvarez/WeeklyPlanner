<UserControl x:Class="WeeklyPlanner.UserControls.DayEventUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WeeklyPlanner.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="10" d:DesignWidth="25">

    <StackPanel>
        <Label Content="{Binding Title}" HorizontalAlignment="Left"/>
        <TextBlock Text="{Binding Description}" FontSize="12"/>
    </StackPanel>
</UserControl>
